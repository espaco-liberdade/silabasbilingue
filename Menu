<script>
    const consonants = ["B", "C", "D", "F", "G", "H", "J", "K", "L", "M", "N", "P", "Q", "R", "S", "T", "V", "W", "X", "Y", "Z"];
    const menuContainer = document.getElementById('alphabet-menu');

    function createMenu() {
        consonants.forEach(letter => {
            const card = document.createElement('div');
            card.className = 'letter-card';
            const link = `https://github.com/espaco-liberdade/silabasbilingue.git/${letter}`;

            card.innerHTML = `
                <div class="letter-main">${letter}</div>
                <button class="btn-play" title="Ouvir som" onclick="event.stopPropagation(); speakLetter('${letter}')">‚ñ∂Ô∏è</button>
                <div class="btn-go">Abrir Aula</div>
            `;
            
            card.onclick = () => window.open(link, '_blank');
            menuContainer.appendChild(card);
        });
    }

    function speakLetter(letter) {
        if ('speechSynthesis' in window) {
            window.speechSynthesis.cancel();
            const utterance = new SpeechSynthesisUtterance(letter);
            utterance.lang = 'en-US';
            utterance.rate = 0.85;
            
            const voices = window.speechSynthesis.getVoices();
            const enVoice = voices.find(v => v.lang.startsWith('en-') && (v.name.includes('Google') || v.name.includes('Siri')));
            if (enVoice) utterance.voice = enVoice;

            window.speechSynthesis.speak(utterance);
        }
    }

    window.onload = createMenu;
    window.speechSynthesis.onvoiceschanged = () => window.speechSynthesis.getVoices();
</script>

